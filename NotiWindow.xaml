<Window x:Class="KuBob.NotiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NotiWindow" Height="300" Width="350" WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ShowInTaskbar="False" WindowStartupLocation="Manual" Focusable="False"
        Topmost="True"
        >
    <StackPanel x:Name="stackNotiPanel" VerticalAlignment="Bottom" Background="Transparent" Margin="0,0,10,10">
        <StackPanel.Effect>
            <DropShadowEffect x:Name="grideffectShadow" BlurRadius="10" ShadowDepth="3" Direction="270" Color="{DynamicResource cColor}" Opacity="0.5"/>
        </StackPanel.Effect>
        <Grid Margin="10" MinHeight="80" Background="{DynamicResource sColor}" Visibility="Collapsed" >
            <StackPanel Margin="11,1,1,1" Background="White">
                <TextBlock Text="수리 완료" Margin="15,10,15,5" FontSize="20" Foreground="{DynamicResource sColor}"/>
                <TextBlock Text="나가토 개의 수리가 완료되었습니다.   asdasdasd asdasdasdasdsadasdsadsad" Margin="15,5,15,10" FontSize="13.33" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
